	name = Alexandre Rames
	email = alexandre.rames@uop.re

[color]
	ui = auto

[color "diff"]
	whitespace = red reverse

[core]
	excludesfile = ~/.gitignore_global
	editor = vim

[alias]
  branches = branch -a
  remotes = remote -v

	# From http://stackoverflow.com/questions/3672073/git-merge-to-another-branch
	mergeto = "!exec_mergeto() { export tmp_branch=`git branch | grep '* ' | tr -d '* '` && git checkout $1 && git merge $tmp_branch && git checkout $tmp_branch; unset tmp_branch; }; exec_mergeto"

[push]
	default = matching
